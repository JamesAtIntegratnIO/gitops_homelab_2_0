{
  "terminal.integrated.profiles.linux": {
    "nix-shell": {
      "path": "nix",
      "args": ["develop"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "nix-shell",
  "chat.tools.terminal.autoApprove": {
    // Explicitly deny all destructive operations FIRST (before any allows)
    ".*kubectl delete.*": false,
    ".*kubectl patch.*": false,
    ".*kubectl apply.*": false,
    ".*kubectl create.*": false,
    ".*kubectl edit.*": false,
    ".*rm .*": false,
    ".*git push.*": false,
    ".*git reset.*": false,
    ".*git rebase.*": false,
    ".*git merge.*": false,
    ".*tofu apply.*": false,
    ".*terraform apply.*": false,
    ".*talosctl apply-config.*": false,
    ".*talosctl upgrade.*": false,
    ".*helm upgrade.*": false,
    ".*helm install.*": false,
    ".*helm uninstall.*": false,
    ".*docker.*": false,
    ".*podman.*": false,
    
    // Allow safe read-only commands
    "^kubectl get .*": true,
    "^kubectl describe .*": true,
    "^kubectl logs .*": true,
    "^kubectl explain .*": true,
    "^kubectl api-resources.*": true,
    "^kubectl version.*": true,
    "^git status$": true,
    "^git diff.*": true,
    "^git log.*": true,
    "^git show.*": true,
    "^git branch.*": true,
    "^ls .*": true,
    "^cat .*": true,
    "^grep .*": true,
    "^find .*": true,
    "^wc .*": true,
    "^head .*": true,
    "^tail .*": true,
    "^helm template .*": true,
    "^helm show .*": true,
    "^helm list.*": true,
    "^talosctl version$": true,
    "^talosctl get .*": true,
    "^talosctl list.*": true,
    
    // Deny everything else by default
    "/.*/": false
  }
}